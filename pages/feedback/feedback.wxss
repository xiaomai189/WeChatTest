/* pages/feedback/feedback.wxss */
.container {
  min-height: 100vh;
  background-color: #F6F6F6;
  padding: 20rpx;
}

/* 通用section样式 */
.section {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

/* 反馈类型样式 */
.type-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.type-item {
  width: calc(25% - 20rpx);
  margin: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  background-color: #F8F8F8;
  border-radius: 12rpx;
}

.type-item.active {
  background-color: #E6F7FF;
  color: #2B5CFF;
}

.type-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.type-item text {
  font-size: 24rpx;
}

/* 反馈内容样式 */
.content-box {
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 20rpx;
  position: relative;
}

.content-input {
  width: 100%;
  height: 300rpx;
  font-size: 28rpx;
  line-height: 1.5;
}

.word-count {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  font-size: 24rpx;
  color: #999;
}

/* 图片上传样式 */
.image-list {
  display: flex;
  flex-wrap: wrap;
  margin: 0 -10rpx;
}

.image-item {
  width: calc(25% - 20rpx);
  margin: 10rpx;
  position: relative;
  aspect-ratio: 1;
}

.image-item image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 40rpx;
  height: 40rpx;
  background-color: rgba(0, 0, 0, 0.5);
  border-radius: 20rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.upload-btn {
  width: calc(25% - 20rpx);
  margin: 10rpx;
  aspect-ratio: 1;
  background-color: #F8F8F8;
  border-radius: 12rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-btn image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.upload-btn text {
  font-size: 24rpx;
  color: #999;
}

/* 联系方式样式 */
.contact-input {
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 20rpx;
  font-size: 28rpx;
}

/* 提交按钮样式 */
.submit-section {
  margin: 40rpx 0;
  padding: 0 20rpx;
}

.submit-btn {
  background: linear-gradient(135deg, #2B5CFF 0%, #4C7FFF 100%);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
}

.submit-btn[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
  opacity: 0.6;
} 