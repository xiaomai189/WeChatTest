/* pages/login/login.wxss */
.container {
  min-height: 100vh;
  padding: 40rpx;
  background-color: white;
  display: flex;
  flex-direction: column;
}

/* 头部样式 */
.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 60rpx 0;
}

.logo {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

/* 表单样式 */
.login-form {
  margin: 60rpx 0;
}

.form-item {
  display: flex;
  align-items: center;
  background-color: #F8F8F8;
  border-radius: 45rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.input.verify {
  flex: 0.6;
}

.verify-btn {
  font-size: 28rpx;
  color: #2B5CFF;
  padding: 10rpx 30rpx;
  border-left: 2rpx solid #E8E8E8;
}

.verify-btn.disabled {
  color: #999;
}

/* 操作区样式 */
.actions {
  margin-bottom: 40rpx;
}

.login-btn {
  background: linear-gradient(135deg, #2B5CFF 0%, #4C7FFF 100%);
  color: white;
  border-radius: 45rpx;
  font-size: 32rpx;
  font-weight: 500;
  height: 88rpx;
  line-height: 88rpx;
  margin-bottom: 20rpx;
}

.login-btn[disabled] {
  background: #CCCCCC;
  color: #FFFFFF;
  opacity: 0.6;
}

.switch-type {
  text-align: center;
  font-size: 28rpx;
  color: #2B5CFF;
}

/* 协议样式 */
.agreement {
  margin-bottom: 60rpx;
}

.agreement-label {
  display: flex;
  align-items: center;
  font-size: 24rpx;
}

.agreement-text {
  color: #999;
}

.link {
  color: #2B5CFF;
}

/* 其他登录方式样式 */
.other-login {
  margin-top: auto;
}

.divider {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.line {
  width: 100rpx;
  height: 1rpx;
  background-color: #E8E8E8;
  margin: 0 20rpx;
}

.divider text {
  font-size: 24rpx;
  color: #999;
}

.login-methods {
  display: flex;
  justify-content: center;
}

.wechat-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
  line-height: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.wechat-btn::after {
  border: none;
}

.wechat-btn image {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 10rpx;
}

.wechat-btn text {
  font-size: 24rpx;
  color: #333;
}