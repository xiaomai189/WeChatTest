/* pages/reservationList/reservationList.wxss */
.container {
  min-height: 100vh;
  background-color: #F6F6F6;
}

/* 筛选栏样式 */
.filter-bar {
  background-color: white;
  padding: 20rpx 0;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
}

.filter-scroll {
  white-space: nowrap;
}

.filter-list {
  display: inline-flex;
  padding: 0 20rpx;
}

.filter-item {
  padding: 10rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  background-color: #F8F8F8;
}

.filter-item.active {
  background: #E6F7FF;
  color: #2B5CFF;
}

.filter-item text {
  font-size: 28rpx;
}

/* 预约列表样式 */
.reservation-list {
  height: calc(100vh - 88rpx);
  margin-top: 88rpx;
}

.list-content {
  padding: 20rpx;
}

.reservation-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.reservation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.reservation-info {
  display: flex;
  align-items: center;
}

.type-tag {
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
  margin-right: 15rpx;
}

.type-tag.in {
  background-color: #E6F7FF;
  color: #2B5CFF;
}

.type-tag.out {
  background-color: #FFF7E6;
  color: #FA8C16;
}

.plate-number {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
}

.status.pending {
  background-color: #FFF7E6;
  color: #FA8C16;
}

.status.confirmed {
  background-color: #E6F7FF;
  color: #2B5CFF;
}

.status.completed {
  background-color: #F6FFED;
  color: #52C41A;
}

.status.cancelled {
  background-color: #F5F5F5;
  color: #999;
}

.reservation-body {
  background-color: #F8F8F8;
  border-radius: 12rpx;
  padding: 20rpx;
}

.info-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-row .label {
  font-size: 26rpx;
  color: #666;
}

.info-row .value {
  font-size: 26rpx;
  color: #333;
}

.reservation-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  font-size: 24rpx;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  margin: 0;
  line-height: 1.5;
}

.action-btn.cancel {
  background-color: #FFF1F0;
  color: #FF4D4F;
  border: 2rpx solid #FF4D4F;
}

/* 加载更多样式 */
.loading-more, .no-more {
  text-align: center;
  padding: 20rpx 0;
}

.loading-more text, .no-more text {
  font-size: 24rpx;
  color: #999;
}

/* 空状态样式 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-state text {
  font-size: 28rpx;
  color: #999;
} 